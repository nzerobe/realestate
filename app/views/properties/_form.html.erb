<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :property %>
    <%= form.text_field :property %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %> yen
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :building_age %>
    <%= form.number_field :building_age %> year/years old
  </div>

  <div class="field">
    <%= form.label :remarks %>
    <%= form.text_area :remarks %>
  </div>
  <hr>
 
  <%= form.fields_for :stations do |station|%>
    <h3>Name of Railway</h3>
    <div class="field">
      <%= station.label :railway, "Name of railway line" %>
      <%= station.text_field :railway %>
    </div>

    <div class="field">
      <%= station.label :name, "Station name" %>
      <%= station.text_field :name %>
    </div>

    <div class="field">
      <%= station.label :distance, "How many minutes walk" %>
      <%= station.text_field :distance %> min/mins
    </div>

  <%end%>
  <div class="actions">
    <%= form.submit "Register" %>
  </div>
<% end %>
